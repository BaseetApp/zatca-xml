{
    "name": "baseet/ubl-invoice",
    "description": "A modern object-oriented PHP library to create valid UBL files",
    "keywords": [
        "ubl",
        "invoice",
        "ublinvoice",
        "ubl invoice",
        "efff",
        "electronic invoice",
        "digital invoice",
        "xml",
        "xml invoice"
    ],
    "homepage": "https://github.com/BaseetApp/zatca-xml",
    "license": "MIT",
    "authors": [
        {
            "name": "Ahmed Samir",
            "email": "a.samirsherif@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.1||^8.0",
        "sabre/xml": "^2.1"
    },
    "require-dev": {
        "phpunit/phpunit" : "^7.0",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "BaseetApp\\UBL\\": ["src"],
            "BaseetApp\\UBL\\Tests\\": ["tests"]
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "phpcs": "vendor/bin/phpcs -n --standard=phpcs.xml ./src/"
    }
}
